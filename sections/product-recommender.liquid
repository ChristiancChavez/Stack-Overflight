        },
        {
          "type": "select",
          "id": "trip_type",
          "label": "Trip Type",
          "options": [
            {
              "value": "single",
              "label": "Single trip"
            },
            {
              "value": "multi",
              "label": "Multi-trip"
            }
          ],
          "default": "single"
        },
        {
          "type": "select",
          "id": "cost_range",
          "label": "Trip Cost Range",
          "options": [
            {
              "value": "under_500",
              "label": "<€500"
            },
            {
              "value": "500_1500",
              "label": "€500–€1500"
