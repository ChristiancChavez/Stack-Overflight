
{% liquid
  assign background_style_class = 'product-recommender-section--background-' | append: section.settings.background_style
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  class="
    product-recommender-section
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    {{ background_style_class }}
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% if section.settings.background_style == 'image' and section.settings.background_image != blank %}
      --background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
    {% endif %}
    {% if section.settings.background_style == 'gradient' %}
      --gradient-start: {{ section.settings.gradient_start }};
      --gradient-end: {{ section.settings.gradient_end }};
    {% endif %}
    --section-gap: {{ section.settings.gap }}px;
  "
  {{ section.shopify_attributes }}
>
  <div class="product-recommender-section__container{% if template.name == 'index' %} product-recommender-section__container--homepage{% endif %}">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="product-recommender-section__header">
        {% if section.settings.title != blank %}
          <h2 class="product-recommender-section__title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="product-recommender-section__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <product-recommender
      class="product-recommender-section__content" 
      id="product-recommender-{{ section.id }}"
      data-section-id="{{ section.id }}"
      data-mappings="{{ section.blocks | where: 'type', 'product_mapping' | json | escape }}"
      data-benefits="{{ section.blocks | where: 'type', 'benefit' | json | escape }}"
    >
      <!-- Progress Indicator -->
      <div class="product-recommender__progress" aria-hidden="true">
        <div class="product-recommender__progress-steps">
          <div class="product-recommender__progress-step" data-step="1">
            <span class="product-recommender__progress-number">1</span>
            <span class="product-recommender__progress-label">Trip Type</span>
          </div>
          <div class="product-recommender__progress-step" data-step="2">
            <span class="product-recommender__progress-number">2</span>
            <span class="product-recommender__progress-label">Cost Range</span>
          </div>
          <div class="product-recommender__progress-step" data-step="3">
            <span class="product-recommender__progress-number">3</span>
            <span class="product-recommender__progress-label">Coverage</span>
          </div>
        </div>
        <div class="product-recommender__progress-bar">
          <div class="product-recommender__progress-fill" style="width: 0%"></div>
        </div>
      </div>

      <!-- Selector Steps -->
      <div class="product-recommender__selector">
        <!-- Step 1: Trip Type -->
        <div class="product-recommender__step" data-step="1">
          <h3 class="product-recommender__step-title">What type of trip are you planning?</h3>
          <div class="product-recommender__options">
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="single"
              data-step="1"
              aria-label="Select Single trip"
            >
              <span class="product-recommender__option-label">Single trip</span>
              <span class="product-recommender__option-description">One-time travel coverage</span>
            </button>
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="multi"
              data-step="1"
              aria-label="Select Multi-trip"
            >
              <span class="product-recommender__option-label">Multi-trip</span>
              <span class="product-recommender__option-description">Multiple trips coverage</span>
            </button>
          </div>
        </div>

        <!-- Step 2: Cost Range -->
        <div class="product-recommender__step product-recommender__step--hidden" data-step="2">
          <h3 class="product-recommender__step-title">What's your trip cost range?</h3>
          <div class="product-recommender__options">
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="under_500"
              data-step="2"
              aria-label="Select under €500"
            >
              <span class="product-recommender__option-label">&lt;€500</span>
              <span class="product-recommender__option-description">Budget-friendly trips</span>
            </button>
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="500_1500"
              data-step="2"
              aria-label="Select €500–€1500"
            >
              <span class="product-recommender__option-label">€500–€1500</span>
              <span class="product-recommender__option-description">Mid-range trips</span>
            </button>
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="over_1500"
              data-step="2"
              aria-label="Select over €1500"
            >
              <span class="product-recommender__option-label">&gt;€1500</span>
              <span class="product-recommender__option-description">Premium trips</span>
            </button>
          </div>
        </div>

        <!-- Step 3: Coverage Level -->
        <div class="product-recommender__step product-recommender__step--hidden" data-step="3">
          <h3 class="product-recommender__step-title">What coverage level do you need?</h3>
          <div class="product-recommender__options">
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="standard"
              data-step="3"
              aria-label="Select Standard coverage"
            >
              <span class="product-recommender__option-label">Standard</span>
              <span class="product-recommender__option-description">Essential protection</span>
            </button>
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="premium"
              data-step="3"
              aria-label="Select Premium coverage"
            >
              <span class="product-recommender__option-label">Premium</span>
              <span class="product-recommender__option-description">Enhanced protection</span>
            </button>
            <button
              type="button"
              class="product-recommender__option-card"
              data-value="max"
              data-step="3"
              aria-label="Select Max coverage"
            >
              <span class="product-recommender__option-label">Max</span>
              <span class="product-recommender__option-description">Maximum protection</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Product Recommendation Display (will be populated by JavaScript) -->
      <div class="product-recommender__result product-recommender__result--hidden" id="product-recommender-result-{{ section.id }}">
        <div class="product-recommender__product-card">
          <!-- Primer contenedor: Row con dos columnas -->
          <div class="product-recommender__product-main-row">
            <!-- Primera columna: Solo imagen -->
            <div class="product-recommender__product-image-column">
              <div class="product-recommender__product-image-wrapper">
                <span class="product-recommender__price-badge"></span>
                <img
                  class="product-recommender__product-image"
                  src=""
                  alt=""
                  loading="{% if template.name == 'index' %}lazy{% else %}eager{% endif %}"
                  width="100%"
                  height="100%"
                  decoding="async"
                >
              </div>
            </div>
            
            <!-- Segunda columna: Información del paquete -->
            <div class="product-recommender__product-package-column">
              <h3 class="product-recommender__product-title product-recommender__product-title--shopify"></h3>
              <p class="product-recommender__product-copy product-recommender__product-copy--shopify"></p>
              <ul class="product-recommender__product-benefits"></ul>
            </div>
          </div>
          
          <!-- Segundo contenedor: Botón CTA -->
          <div class="product-recommender__product-cta-container">
            <button
              type="button"
              class="product-recommender__cta-button button"
              data-cta-type="{{ section.settings.cta_type }}"
            >
              {{ section.settings.cta_text | default: "Add to Cart" }}
            </button>
          </div>
        </div>
      </div>
    </product-recommender>
  </div>
</div>

<script
  src="{{ 'product-recommender.js' | asset_url }}"
  type="module"
  defer
></script>

{% stylesheet %}
  .product-recommender-section {
    position: relative;
    overflow: hidden;
  }

  .product-recommender-section--background-image {
    background-image: var(--background-image);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .product-recommender-section--background-gradient {
    background: linear-gradient(135deg, var(--gradient-start, #667eea) 0%, var(--gradient-end, #764ba2) 100%);
  }

  .product-recommender-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-recommender-section__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .product-recommender-section__title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 700;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .product-recommender-section__subtitle {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    margin: 0;
    opacity: 0.9;
    line-height: 1.6;
  }

  .product-recommender-section__content {
    display: flex;
    flex-direction: column;
    gap: var(--section-gap, 24px);
  }

  /* Progress Indicator */

  .product-recommender__progress-steps {
    display: flex;
    justify-content: space-between;
    margin-bottom: 16px;
    position: relative;
  }

  .product-recommender__progress-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    flex: 1;
    position: relative;
    z-index: 2;
  }

  .product-recommender__progress-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-background);
    border: 2px solid var(--color-foreground);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .product-recommender__progress-step[data-active="true"] .product-recommender__progress-number {
    background: var(--color-foreground);
    color: var(--color-background);
    transform: scale(1.1);
  }

  .product-recommender__progress-step[data-completed="true"] .product-recommender__progress-number {
    background: var(--color-foreground);
    color: var(--color-background);
  }

  .product-recommender__progress-label {
    font-size: 0.875rem;
    text-align: center;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .product-recommender__progress-step[data-active="true"] .product-recommender__progress-label,
  .product-recommender__progress-step[data-completed="true"] .product-recommender__progress-label {
    opacity: 1;
    font-weight: 600;
  }

  .product-recommender__progress-bar {
    height: 2px;
    background: rgba(var(--color-foreground-rgb), 0.2);
    border-radius: 1px;
    position: relative;
    overflow: hidden;
  }

  .product-recommender__progress-fill {
    height: 100%;
    background: var(--color-foreground);
    transition: width 0.4s ease;
    border-radius: 1px;
  }

  /* Selector Steps */
  .product-recommender__selector {
    position: relative;
    min-height: 300px;
  }

  .product-recommender__step {
    display: flex;
    flex-direction: column;
    gap: 24px;
    animation: fadeIn 0.4s ease;
  }

  .product-recommender__step--hidden {
    display: none;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .product-recommender__step-title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: 600;
    text-align: center;
    margin: 0;
    line-height: 1.3;
  }

  .product-recommender__options {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
  }

  /* Option Cards */
  .product-recommender__option-card {
    background: var(--color-background);
    border: 2px solid rgba(var(--color-foreground-rgb), 0.2);
    border-radius: 12px;
    padding: 24px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: 8px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .product-recommender__option-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-foreground);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .product-recommender__option-card:hover {
    border-color: var(--color-foreground);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(var(--color-foreground-rgb), 0.15);
  }

  .product-recommender__option-card:hover::before {
    opacity: 0.05;
  }

  .product-recommender__option-card[data-selected="true"] {
    border-color: var(--color-foreground);
    background: rgba(var(--color-foreground-rgb), 0.05);
    box-shadow: 0 4px 16px rgba(var(--color-foreground-rgb), 0.1);
  }

  .product-recommender__option-card[data-selected="true"]::before {
    opacity: 0.1;
  }

  .product-recommender__option-label {
    font-size: 1.25rem;
    font-weight: 600;
    position: relative;
    z-index: 1;
    color: var(--color-foreground);
  }

  .product-recommender__option-description {
    font-size: 0.875rem;
    opacity: 0.7;
    position: relative;
    z-index: 1;
    color: var(--color-foreground);
  }

  /* Product Result Card */
  .product-recommender__result {
    animation: fadeIn 0.4s ease;
  }

  .product-recommender__result--hidden {
    display: none;
  }

  .product-recommender__product-card {
    background: var(--color-background);
    border-radius: 16px;
    padding: 32px;
    box-shadow: 0 8px 32px rgba(var(--color-foreground-rgb), 0.1);
    display: flex;
    flex-direction: column;
    gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Primer contenedor: Row con dos columnas */
  .product-recommender__product-main-row {
    display: flex;
    flex-direction: row;
    gap: 32px;
    width: 100%;
  }

  @media (max-width: 768px) {
    .product-recommender__product-main-row {
      flex-direction: column;
    }
  }

  /* Primera columna: Solo imagen */
  .product-recommender__product-image-column {
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .product-recommender__product-image-wrapper {
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: 12px;
    overflow: hidden;
    background: rgba(var(--color-foreground-rgb), 0.05);
    position: relative;
  }

  .product-recommender__price-badge {
    position: absolute;
    top: 16px;
    right: 16px;
    background: var(--color-background);
    color: var(--color-foreground);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 1.125rem;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(var(--color-foreground-rgb), 0.15);
    z-index: 2;
    white-space: nowrap;
  }

  .product-recommender__product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-recommender__product-copy--shopify {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
    text-align: left;
  }

  /* Segunda columna: Información del paquete */
  .product-recommender__product-package-column {
    display: flex;
    flex-direction: column;
    gap: 20px;
    flex: 1;
  }

  .product-recommender__product-title--shopify {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    text-align: left;
  }

  .product-recommender__product-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
    text-align: left;
  }

  .product-recommender__product-benefits li {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .product-recommender__product-benefits li::before {
    content: '✓';
    font-weight: 700;
    flex-shrink: 0;
    background-color: var(--color-foreground);
    color: white;
    padding: 4px;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-recommender__product-copy--package {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
    text-align: left;
  }

  /* Segundo contenedor: Botón CTA */
  .product-recommender__product-cta-container {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .product-recommender__product-title {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
  }

  .product-recommender__product-copy {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  .product-recommender__product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-foreground);
  }

  .product-recommender__product-benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
    width: 100%;
    text-align: left;
  }

  .product-recommender__product-benefits li {
    display: flex;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 8px;
    font-size: 0.95rem;
    line-height: 1.5;
    text-align: left;
    width: 100%;
  }

  .product-recommender__product-benefits li::before {
    content: '✓';
    flex-shrink: 0;
    color: white;
    font-weight: 700;
  }

  .product-recommender__cta-button {
    width: 50%;
    padding: 16px 32px;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  /* Responsive Design */
  @media screen and (min-width: 750px) {
    .product-recommender__product-card {
      flex-direction: column;
      align-items: center;
      justify-content: center;

    }

    .product-recommender__options {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      text-align: center;
    }
  }

  @media screen and (max-width: 749px) {
    .product-recommender-section__container {
      padding: 0 16px;
    }

    .product-recommender__options {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    .product-recommender__progress-label {
      font-size: 0.75rem;
    }

    .product-recommender__product-card {
      padding: 24px;
    }
  }

  /* Error Message */
  .product-recommender__error-message {
    padding: 12px 16px;
    background: rgba(220, 38, 38, 0.1);
    border: 1px solid rgba(220, 38, 38, 0.3);
    border-radius: 8px;
    color: #dc2626;
    font-size: 0.875rem;
    margin-bottom: 16px;
    animation: fadeIn 0.3s ease;
  }

  .product-recommender__error-message--hidden {
    display: none;
  }

  .product-recommender__cta-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Homepage-specific refinements */

  @media screen and (min-width: 750px) {
    .product-recommender-section__container--homepage .product-recommender-section__header {
      margin-bottom: 35px;
    }

    .product-recommender-section__container--homepage .product-recommender__product-card {
      max-width: 1000px;
    }
  }

  /* Performance optimizations for homepage */
  .product-recommender-section__container--homepage .product-recommender__option-card {
    will-change: transform;
  }

  .product-recommender-section__container--homepage .product-recommender__product-image {
    content-visibility: auto;
  }

  /* Defer animations until ready */
  .product-recommender:not(.product-recommender--animations-ready) .product-recommender__step {
    animation: none;
  }

  .product-recommender.product-recommender--animations-ready .product-recommender__step {
    animation: fadeIn 0.4s ease;
  }

  /* Reduce motion for homepage if user prefers */
  @media (prefers-reduced-motion: reduce) {
    .product-recommender-section__container--homepage .product-recommender__option-card {
      transition: none;
    }

    .product-recommender-section__container--homepage .product-recommender__step {
      animation: none;
    }
  }
{% endstylesheet %}

{% schema %}
